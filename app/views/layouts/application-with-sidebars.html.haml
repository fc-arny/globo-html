= content_for :content do
  .with-sidebars.row-fluid
    / Left menu - store select, filters
    .content-left.span2
      = render :partial => 'partials/left-side'

    /  Right menu
    .content-right.span3
      /= basket_sidebar @order

    / Content
    .content-main.span7
      = content_for?(:main) ? yield(:main) : yield


= render :template => 'layouts/application'